@model Students.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-4">
        <h2>Вход в приложение</h2>
        <form method="post" asp-controller="Accounts" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label><br />
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label><br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe" style="display: inline"></label>
                <input asp-for="RememberMe" style="display : inline; margin-top : 3px;" />
            </div>
            <div class="form-group">
                <input class="form-control" type="submit" value="Войти" />
            </div>
        </form>
    </div>
    <div class="col-md-4" style="margin-top : 49px">
        <h4>Войти через MPass</h4>
        <form method="post" action="https://mpass.esempla.com/saml/login">
            <input type="text" hidden="hidden" value="@ViewBag.MPassToken" name="loginMessage"/>
            <input type="submit" value="Войти" class="form-control" />
        </form>
    </div>
</div>
